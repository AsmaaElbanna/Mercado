<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="2dp"
       android:layout_marginBottom="1dp"
       android:layout_margin="5dp"
       android:layout_weight="1">
       <LinearLayout
           android:id="@+id/item_cart_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:weightSum="7">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="2">
               <ImageView
                   android:id="@+id/item_image"
                   android:layout_width="100dp"
                   android:layout_height="113dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="8dp"
                   android:contentDescription="product image"
                   android:src="@drawable/logo" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="4"
               android:paddingTop="15dp"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/title_item_cart"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:maxLines="3"
                   android:minLines="1"
                   android:ellipsize="end"
                   android:text="name of the item is the longest name evername of the item is the longest name ever "
                   android:textColor="@color/primary_text"
                   android:textSize="16sp"
                   android:textStyle="bold"/>
               <TextView
                   android:id="@+id/price_item_cart"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:layout_marginTop="10dp"
                   android:text="4.95$"
                   android:textColor="@color/primary"
                   android:textSize="16sp"
                   android:textStyle="bold" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_margin="2dp"
               android:layout_weight="1">
               <Button
                   android:id="@+id/increase_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:textColor="@color/secondary_text"
                   android:textSize="25sp"
                   android:text="+"/>
               <TextView
                   android:id="@+id/amount"
                   android:layout_width="match_parent"
                   android:text=""
                   android:gravity="center"
                   android:paddingBottom="10dp"
                 android:paddingTop="10dp"
                   android:textSize="16sp"
                   android:background="@drawable/count_border"
                   android:layout_height="wrap_content"/>
               <Button
                   android:id="@+id/decrease_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:textColor="@color/secondary_text"
                   android:textSize="25sp"
                   android:text="-"/>

           </LinearLayout>

       </LinearLayout>



   </androidx.cardview.widget.CardView>




</LinearLayout>